<!-- Modal -->
<div class="modal fade" id="myModalProveedore" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Agregar Proveedor</h4>
      </div>
      <div class="modal-body">
        <div class="panel-body">
          <div class="errors"></div>
              <%= form_for User.new, url: users_path , remote: true do |f| %>
                <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                      <label>Nombre</label>
                      <%= f.text_field :name, class:"form-control input-sm"%>
                    </div>
                  </div>
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                      <label>Transportista</label>
                      <%= f.text_field :carrier, class:"form-control input-sm"%>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Correo Electr√≥nico</label>
                    <%= f.text_field :email, class:"form-control input-sm"%>
                </div>
                <div class="form-group">
                  <label>Nombre Usuario</label>
                  <%= f.text_field :username, class:"form-control input-sm"%>
                </div>

                <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                      <label>Telefono Fijo</label>
                      <%= f.text_field :landline, class:"form-control input-sm"%>
                    </div>
                  </div>
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                      <label>Telefono Celular</label>
                      <%= f.text_field :cell_phone, class:"form-control input-sm"%>
                    </div>
                  </div>
                </div>

                 <div class="row">
                  <div class="col-xs-4 col-sm-4 col-md-4">
                    <div class="form-group">
                      <label>Contenedor</label>
                      <%= f.check_box :container%>
                    </div>
                  </div>
                  <div class="col-xs-4 col-sm-4 col-md-4">
                    <div class="form-group">
                      <label>Carga Liquida</label>
                      <%= f.check_box :liquid_charge%>
                    </div>
                  </div>
                  <div class="col-xs-4 col-sm-4 col-md-4">
                    <div class="form-group">
                      <label>Carga General</label>
                      <%= f.check_box :dry_charge%>
                      <%= f.hidden_field :kind, :value => "proveedor" %>
                    </div>
                  </div>
                </div>
                <%= f.submit "Aegregar", :class =>"btn btn-info btn-block"%>
              <%end%>
            </div>
      </div>
    </div>
  </div>
</div>