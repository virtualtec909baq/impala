<div class="page-header">
	<ol class="breadcrumb">
		<li class="active">
			<i class="fa fa-truck"></i> 
			<%= t('.head')%>
		</li>
	</ol>
</div>

<div class="row">
	<div class="col-xs-12">
		<div class="countdown">
		</div>
		<br>
		<br>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3><strong><%= t('.offer')%> <%= @offer.kind%> No.<%= @offer.id%></strong> </h3>
			</div>
			<div class="panel-body">
				<%if current_user.kind == "admin"%>
					<div class="row">
						<div class="col-lg-3">
							<p><a href="#" class="btn btn-outlined btn-block btn-success" data-toggle="modal" data-target="#myModal"><%= t('.extend')%></a></p>
						</div>
						<div class="col-lg-3">
							<p><%= link_to(t('.edit'), edit_offer_path(@offer), html_options = {:class => "btn btn-outlined btn-block btn-info"})%></p> 
						</div>
						<div class="col-lg-3">
							<%= button_to statuts(@offer.status), { :controller => "offers", :action => "change_status", :id => @offer.id, :method => :put}, html_options = {:class => "btn btn-outlined btn-block  btn_white btn-warning"} %>
						</div>
						<div class="col-lg-3">
							<p><%= link_to(t('.delete'), @offer, html_options = {:class => "btn btn_white btn-outlined btn-block btn-danger", data: {:confirm => t('.data_delete')}, :method => :delete} )%></p> 
						</div>
					</div>
					<hr>
				<%end%>
				
				<div class="row">
					<div class="row">
						<div class="col-lg-12">
							<div class="col-lg-6">
								<span class="bold"> <%= t('.product')%></span>
								<p><%= @offer.product%></p>
							</div>
							<div class="col-lg-6">
								<span class="bold"><%= t('.volumen')%></span>
								<p><%= @offer.volumen%> <%= @offer.unit%></p>
							</div>
						</div>
						<div class="col-lg-12">
							<div class="col-lg-6">
								<span class="bold"><%= t('.origins')%></span>
								<p><%= @offer.origins%></p>
							</div>
							<div class="col-lg-6">
								<span class="bold"><%= t('.destination')%></span>
								<p><%= @offer.destination%></p>
							</div>
						</div>
						<div class="col-lg-12">
							<div class="col-lg-4">
								<span class="bold"><%= t('.liquid_load')%></span>
								<p><%= boolean_translate(@offer.liquid_load)  %></p>
							</div>
							<div class="col-lg-4">
								<span class="bold"><%= t('.general_load')%></span>
								<p><%=boolean_translate(@offer.general_load)%></p>
							</div>
							<div class="col-lg-4">
								<span class="bold"><%= t('.container')%></span>
								<p><%= boolean_translate(@offer.container)%></p>
							</div>
							<br>
						</div>
							
						<div class="col-lg-12">
							<hr>
							<div class="col-lg-6">
								<span class="bold"><%= t('.offer_start_date')%></span>
								<p><%= @offer.offer_start_date%></p>
							</div>
							<div class="col-lg-6">
								<span class="bold"><%= t('.offer_finish_date')%></span>
								<p><%= @offer.offer_finish_date%></p>
							</div>
						</div>
					<%if current_user.kind == "admin"%>
						<div class="col-lg-12">
							<div class="col-lg-6">
								<span class="bold"><%= t('.service_start_date')%></span>
								<p><%= @offer.service_start_date%></p>
							</div>
							<div class="col-lg-6">
								<span class="bold"><%= t('.service_finish_date')%></span>
								<p><%= @offer.service_finish_date%></p>
							</div>
						</div>
					</div>
					
						<div class="col-lg-12">
							<hr>	
							<span class="bold"><%= t('.observations')%></span>
							<p><%= @offer.observations%></p>
						</div>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>
<%if current_user.kind == "admin"%>
	<%= render(partial: 'offers/providers') %>
<%else%>
	<%= render(partial: 'offers/provider_form') %>
<%end%>
<%= render(partial: 'offers/extend') %>
