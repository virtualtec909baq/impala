<div id="filter-panel" class="collapse filter-panel">
    <div class="panel panel-default">
        <div class="panel-body">
            <%= form_for @filterrific do |f| %>
                <div class="col-md-3">
                    <label>Nombre</label>
                    <%= f.text_field(:search_query_detail, class: 'filterrific-periodically-observed') %>
                </div>
                <div class="col-md-3">
                    <label>Refencia</label>
                    <%= f.text_field(:search_query_ref, class: 'filterrific-periodically-observed') %>
                </div>
            <% end %>
        </div>
    </div>
</div>    
<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#filter-panel"  style="margin-bottom: 10px;">
    <span class="glyphicon glyphicon-filter"></span> Filtros
</button>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalProducto"  style="margin-bottom: 10px;">
    <span class="fa fa-plus"></span> Agregar Producto
</button>
<%= render(partial: 'products/modal')%>
